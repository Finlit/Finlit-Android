            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_confirm"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_ten"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:background="@drawable/background_confirm_date">

                <com.app.finlit.utils.views.TextViewSegoeSemiBold
                    android:id="@+id/tv_intrested"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="I am Interested"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_view_profile">

                <com.app.finlit.utils.views.TextViewSegoeSemiBold
