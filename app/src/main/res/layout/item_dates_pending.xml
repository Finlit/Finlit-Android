<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_five"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/padding_three"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="7dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_five"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.finlit.utils.views.RoundedImageView
                android:id="@+id/iv_up_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin_ten"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_user_square" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_weight="1"
                android:gravity="start|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.finlit.utils.views.TextViewSegoeSemiBold
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="13dp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text" />

                    <com.app.finlit.utils.views.TextViewSegoeSemiBold
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="13dp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text" />
                </LinearLayout>


                <com.app.finlit.utils.views.TextViewEuphemiaRegular
                    android:id="@+id/tv_proffesion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Real Esatate"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_small" />


            </RelativeLayout>

            <com.app.finlit.utils.views.TextViewEuphemiaRegular
                android:id="@+id/tv_date_pending"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="19 feb"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_small" />


        </LinearLayout>

        <com.app.finlit.utils.views.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iv_profile_pending"
            android:layout_marginTop="@dimen/margin_five"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_user_square" />

        <com.app.finlit.utils.views.TextViewEuphemiaRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_five"
            android:text="He is looking for date"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_five"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_location" />

            <com.app.finlit.utils.views.TextViewEuphemiaRegular
                android:id="@+id/tv_location_pending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:freezesText="true"
                android:gravity="center|start"
                android:paddingLeft="@dimen/padding_ten"
                android:text="Suggest a place"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_clock" />

            <com.app.finlit.utils.views.TextViewEuphemiaRegular
                android:id="@+id/tv_time_pending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_ten"
                android:text="Suggest a time"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_confirm"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_ten"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:background="@drawable/background_confirm_date">

                <com.app.finlit.utils.views.TextViewSegoeSemiBold
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_view_profile">

                <com.app.finlit.utils.views.TextViewSegoeSemiBold
                    android:id="@+id/tv_nothanks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="No Thanks"
                    android:textColor="#31AAFF" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>