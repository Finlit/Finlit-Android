<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.app.finlit.ui.dates.CreateDateActivity">

    <include layout="@layout/toolbar_create_date" />

    <com.app.finlit.utils.views.TextViewEuphemiaRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_twenty"
        android:id="@+id/name1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_ten"
        android:layout_marginRight="@dimen/margin_twenty"
        android:orientation="horizontal"
        android:weightSum="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_my_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:src="@mipmap/default_user" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_your_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:layout_weight="1"
            android:src="@mipmap/default_user" />

    </LinearLayout>

    <com.app.finlit.utils.views.TextViewEuphemiaRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_twenty"
        android:text="Suggest a place"
        android:textColor="@color/black_light"
        android:textSize="@dimen/text_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_location"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="#EFEFEF"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:padding="@dimen/padding_three"
            android:src="@mipmap/icon_location" />

        <com.app.finlit.utils.views.TextViewEuphemiaRegular
            android:layout_width="0dp"
            android:id="@+id/choose_location"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="Choose a location"
            android:textColor="@color/black"
            android:textSize="@dimen/text"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:freezesText="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_twenty"
            android:src="@mipmap/icon_location" />
    </LinearLayout>


    <com.app.finlit.utils.views.TextViewEuphemiaRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_twenty"
        android:text="Suggest a time"
        android:textColor="@color/black_light"
        android:textSize="@dimen/text_small" />

    <LinearLayout
        android:id="@+id/ll_select_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="#EFEFEF"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:padding="@dimen/padding_three"
            android:src="@mipmap/icon_calender" />

        <com.app.finlit.utils.views.TextViewEuphemiaRegular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_ten"
            android:gravity="center|start"
            android:text="Select Date and Time"
            android:id="@+id/dateselect"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />


    </LinearLayout>

</LinearLayout>
