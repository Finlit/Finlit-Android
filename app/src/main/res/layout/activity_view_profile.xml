                    android:src="@mipmap/logo_profile" />

                <ImageView
                    android:id="@+id/iv_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@color/mask"
                    android:visibility="gone" />

                <include
                    android:id="@+id/toolbar_add_profile"
                    layout="@layout/toolbar" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_twenty"
                    android:layout_marginRight="150dp"
                    android:layout_marginBottom="@dimen/margin_five"
                    android:orientation="horizontal">

                    <com.app.finlit.utils.views.TextViewEuphemiaRegular
                        android:id="@+id/tv_gender_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_five"
                        android:text="About Her"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_big"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:id="@+id/view_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="150dp"
                    android:layout_marginBottom="@dimen/margin_twenty" />


                <com.app.finlit.utils.views.TextViewEuphemiaRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_twenty"
                    android:layout_marginRight="150dp"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:id="@+id/rel_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/background_profile_image">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@null"
                        android:padding="@dimen/padding_three"
                        android:src="@mipmap/icon_camera" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_twenty"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/icon_message_new" />

                    <ImageView
                        android:id="@+id/iv_open_Dates"
                        android:layout_width="50dp"
                        android:visibility="gone"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/margin_ten"
